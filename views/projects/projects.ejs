<div class="flex flex-row overflow-hidden h-screen w-screen">
    
    <div class="w-32 h-screen top-0  flex-col justify-center items-center hidden md:flex" >
        <a class="text-center w-full text-sm py-4 px-6 h-12 overflow-hidden text-gray-500 text-ellipsis whitespace-nowrap  hover:text-gray-100 hover:bg-gray-400 transition duration-300 ease-in-out" href="#tags">
            Tags
        </a>
        <a class="text-center w-full text-sm py-4 px-6 h-12 overflow-hidden text-gray-500 text-ellipsis whitespace-nowrap  hover:text-gray-100 hover:bg-gray-400 transition duration-300 ease-in-out" href="#projects">
            Projects
        </a>
    </div>
    
    <div class="w-full px-36 overflow-y-scroll scroll-smooth" >
        <div class="flex flex-row pt-20 mb-10" id="tags">
            <hr class="my-auto z-0 w-full border-black">
            <p class="px-20 text-5xl min-w-max font-extralight md:tracking-wide ">MY PROJECTS </p>
            <hr class="my-auto z-0 w-full border-black">
        </div>
        <div class="flex">
            <p class="font-light text-lg mx-auto mb-4">
                Filter through the list by clicking on any of the <span class="text-yellow-500">tags!</span>
            </p>
        </div>
        <div class="grid grid-cols-5 gap-4 col-span-2">
            <% tags.forEach(tag => { %>
                <div class="rounded-lg border-2 border-black p-1">
                    <p class="text-black text-center">
                        <%= tag %>
                    </p>
                </div>
            <% }) %>
        </div>
        <hr class="my-10" id="projects">
        <div class="mb-20">
            <% projects.forEach(project => { %>
                    <div class="grid grid-cols-5 gap-32">
                        <div class="flex flex-col col-span-3">
                            <div>
                                <p class="text-2xl font-bold">
                                    <%= project.name %>
                                </p>
                            </div>
                            <p class="text-md pt-6">
                                <%= project.description %>
                            </p>
                        </div>
                        <img class="col-span-2 object-cover rounded-md border-2 border-gray-900 h-full"  src="/projects/<%= project.banner %>" alt="">
                    </div>
                    <hr class="mb-5">
            <% }) %>

        </div>
    </div>
</div>
