<div>
    <!--Create a Center div-->
    <div class="container mx-auto pt-20 mt-10">
        <div class="w-1/3  mx-auto rounded-2xl shadow-xl bg-gray-white p-10">  <!--Create a Flex Container-->
            <% if (locals.error) { %>
                <div class="bg-red-500 text-white text-center p-2 mb-4 rounded-sm">
                    <%= error %>
                </div>
            <% } %>

            <% if (locals.project) { %>
                <h1 class="text-2xl font-bold mb-2">Edit Project</h1>
            <% } else { %>
                <h1 class="text-2xl font-bold mb-2">Add Project</h1>
            <% } %>
            <form action="#" enctype="multipart/form-data" method="POST">
                <div class="flex flex-col">
                    <div class="mb-10">
                        <label for="project_name" class="text-md block">Project Name</label>
                        <% if (locals.project) { %>
                            <input type="text" name="project_name" id="project_name" class="w-full p-2 border-2 border-gray-500" value="<%= locals.project.name %>">    
                        <% } else { %>
                            <input type="text" name="project_name" id="project_name" class="w-full p-2 border-2 border-gray-500">
                        <% } %>
                        
                    </div>
                    <div class="mb-10">
                        <label for="project_description" class="text-md block">Project Description</label>
                        <% if (locals.project) { %>
                            <textarea name="project_description" id="project_description" class="w-full p-2 border-2 border-gray-500" rows="5"><%= locals.project.description %></textarea>
                        <% } else { %>
                            <textarea name="project_description" id="project_description" class="w-full p-2 border-2 border-gray-500" rows="5"></textarea>
                        <% } %>
                    </div>
                    <div class="mb-10">
                        <label for="project_link" class="text-md block">Project Link</label>
                        <% if (locals.project) { %>
                            <input type="text" name="project_link" id="project_link" class="w-full p-2 border-2 border-gray-500" value="<%= locals.project.projectLink %>">
                        <% } else { %>
                            <input type="text" name="project_link" id="project_link" class="w-full p-2 border-2 border-gray-500">
                        <% } %>
                    </div>

                    <div class="mb-10">
                        <label for="project_image" class="text-md block">Project Image</label>
                        <input type="file" name="project_image" id="project_image" class="rounded-lg p-1  w-full border-2 border-gray-800" accept="image/*">
                    </div>
                    <div class="mb-10">
                        <label for="project_tags" class="text-md block is_markdown">Tags</label>
                        <% if (locals.project) { %>
                            <input type="text" name="project_tags" id="project_tags" class="w-full p-2 border-2 border-gray-500" value="<%= locals.project.tags.join(', ') %>">
                        <% } else { %>
                            <input type="text" name="project_tags" id="project_tags" class="w-full p-2 border-2 border-gray-500">
                        <% } %>
                    </div>
                    <button class="bg-gray-700 hover:bg-gray-800 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                        <% if (locals.project) { %>
                            Update
                        <% } else { %>
                            Add
                        <% } %>
                    </button> 
            </form>
        </div>
    </div>
</div>